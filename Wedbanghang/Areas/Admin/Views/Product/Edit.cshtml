@model ProductModel
@{
    ViewData["title"] = "Edit Product";
}
<h4>Edit Product</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <!-- sản phẩm -->
        <div class="form-group">
            <label>Slug</label>
            <input asp-for="Slug" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>

        <!-- Giá sản phẩm -->
        <div class="form-group">
            <label>Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Mô tả sản phẩm -->
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Danh mục -->
        <div class="form-group">
            <label>Category</label>
            <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
                <option value="">--choose a category</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>

        <!-- Thương hiệu -->
        <div class="form-group">
            <label>Brand</label>
            <select asp-for="BrandID" class="form-control" asp-items="ViewBag.Brands">
                <option value="">-- Choose a brand --</option>
            </select>
            <span asp-validation-for="BrandID" class="text-danger"></span>
        </div>
        <!-- Hình ảnh -->
        <div class="form-group">
            <label>Image</label>
            <input asp-for="imageUpload" type="file" class="form-control" />
            <span asp-validation-for="imageUpload" class="text-danger"></span>
            <td><img src="~/media/products/@Model.Image" width="120"></td>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>
    </form>
    <a asp-action="Index">Back to Lsit Product</a>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="http://cdn.ckeditor.com/4.22.1/standard/ckeditor.js" ></script>
    <script> 
        CKEDITOR.replace('Description');
    </script>
} 